

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Kinston e Uiversity</h1>

    <form asp-action="Login" method="post" class="border p-4 rounded shadow">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password" required />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Login</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"]
        </div>
    }

    <div class="mt-3 text-center">
        <p>If you are a new user, <a asp-controller="Account" asp-action="Register">create a new account</a>.</p>
    </div>
</div>

<style>
    /* Additional custom styles */
    .container {
        max-width: 400px; /* Set a max width for the form */
    }
    .btn-block {
        width: 100%; /* Ensure the button takes full width */
    }
</style>
